<ResourceDictionary x:Class="Consilium.Mobile.Tablet.Theme.ThemeDictionary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="WindowsBackgroundColor1">#FF000000</Color>
    <Color x:Key="WindowsBackgroundColor2">#FF1A1A1A</Color>

    <LinearGradientBrush x:Key="WindowBackground" EndPoint="0,0" StartPoint="0,0">
        <GradientStop Color="{StaticResource WindowsBackgroundColor1}"/>
        <GradientStop Color="{StaticResource WindowsBackgroundColor2}"/>
    </LinearGradientBrush>

    <SolidColorBrush x:Key="TextBrush" />
    <SolidColorBrush x:Key="ButtonBackgroundBrush" />
    <SolidColorBrush x:Key="ButtonBorderBrush" />
</ResourceDictionary>
